{
  "name": "spotify-taskbar-widget",
  "version": "1.0.0",
  "description": "A frameless, always-on-top Spotify mini player for the Windows 11 taskbar.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64",
    "clean-tokens": "rm -f tokens.json",
    "build-appbar-helper": "dotnet publish ./tools/appbar-helper -c Release -r win-x64 --self-contained false -o ./tools/appbar-helper/publish/win-x64"
  },
  "keywords": [
    "spotify",
    "electron",
    "widget",
    "windows",
    "taskbar"
  ],
  "author": "Jules",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "open": "^8.4.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "Jules.SpotifyTaskbarWidget",
    "productName": "Spotify Taskbar Widget",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "renderer/spotify-widget.ico"
    }
  }
}
